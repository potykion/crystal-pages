@page "{systemUrl}"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Mvc.Localization
@model IndexModel
@inject IHtmlLocalizer<SharedResources> SharedLocalizer;
@inject IAuthorizationService AuthorizationService

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        
            <th>
                @Html.DisplayNameFor(model => model.ElemTablLanguage[0].MethodP)
            </th>
        
            <th>
                @Html.DisplayNameFor(model => model.ElemTablLanguage[0].Nazbparam)
            </th>
        

        
            <th>
                @Html.DisplayNameFor(model => model.ElemTablLanguage[0].ElemTabl.Znparam)
            </th>
        
            <th>
                @Html.DisplayNameFor(model => model.ElemTablLanguage[0].ElemTabl.Errparam)
            </th>
        
            <th>
                @Html.DisplayNameFor(model => model.ElemTablLanguage[0].ElemTabl.NazvAngl)
            </th>
        
            <th>
                @Html.DisplayNameFor(model => model.ElemTablLanguage[0].ElemTabl.ZnAngle)
            </th>
        
            <th>
                @Html.DisplayNameFor(model => model.ElemTablLanguage[0].ElemTabl.ErrAngl)
            </th>
        

        
            @if ((await AuthorizationService.AuthorizeAsync(User, "UserOnly")).Succeeded)
            {
            <th>
                @SharedLocalizer["Reference"]
            </th>
            }
        
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.ElemTablLanguage)
    {
    <tr>
        
            <td>
                
                    @Html.DisplayFor(modelItem => item.MethodP)
                
            </td>
        
            <td>
                
                    @Html.DisplayFor(modelItem => item.Nazbparam)
                
            </td>
        

        
            <td>
                
                    @Html.DisplayFor(modelItem => item.ElemTabl.Znparam)
                
            </td>
        
            <td>
                
                    @Html.DisplayFor(modelItem => item.ElemTabl.Errparam)
                
            </td>
        
            <td>
                
                    @Html.DisplayFor(modelItem => item.ElemTabl.NazvAngl)
                
            </td>
        
            <td>
                
                    @Html.DisplayFor(modelItem => item.ElemTabl.ZnAngle)
                
            </td>
        
            <td>
                
                    @Html.DisplayFor(modelItem => item.ElemTabl.ErrAngl)
                
            </td>
        

        
            @if ((await AuthorizationService.AuthorizeAsync(User, "UserOnly")).Succeeded)
            {
            <td>
                <a data-toggle="popover" data-placement="right"
                   data-content="@Html.Raw(Model.References[item.ElemTablId])">
                    @Model.References[item.ElemTablId].BibliogrId
                </a>
            </td>
            }
        

        <td>
            <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
            <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
        </td>
    </tr>
    }
    </tbody>
</table>